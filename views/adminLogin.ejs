<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="admin-login-container">
        <h1 class="admin-login-title animate__animated animate__fadeInDown">Admin Login</h1>
        <% if (typeof error !== 'undefined') { %>
            <p class="error-message animate__animated animate__shakeX"><%= error %></p>
        <% } %>
        <form action="/admin/login" method="POST" class="admin-login-form animate__animated animate__fadeInUp">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</body>
</html>
