<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <h1 class="animate__animated animate__fadeInDown">Admin Panel</h1>
        <form action="/admin/update-background" method="POST" enctype="multipart/form-data" class="admin-form animate__animated animate__fadeInUp">
            <label for="background">Update Background Image:</label>
            <input type="file" name="background" id="background" accept="image/*" required>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        <div class="admin-chat-container animate__animated animate__fadeInUp">
            <h2>Watch Chat Room</h2>
            <div class="admin-chat-controls">
                <select id="chat-room-select" class="chat-room-select">
                    <% chatRooms.forEach(room => { %>
                        <option value="<%= room %>"><%= room %></option>
                    <% }); %>
                </select>
                <button id="join-room-btn" class="btn btn-primary btn-small">Join</button>
                <button id="leave-room-btn" class="btn btn-secondary btn-small">Leave</button>
            </div>
            <div class="admin-chat-room">
                <div id="admin-chat-messages" class="admin-chat-messages"></div>
                <form id="admin-chat-form" class="admin-chat-form">
                    <input type="text" id="admin-message-input" placeholder="Type a message..." required>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
        <a href="/chat" class="btn btn-secondary animate__animated animate__fadeInUp">Back to Chat</a>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
